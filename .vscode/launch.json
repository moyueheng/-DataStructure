    "version": "0.2.0",
    "configurations": [
        {
            // lldb调试
            "name": "(lldb) 调试",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/build/DataStructure",
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "C/C++: clang++ build active file"
        },
        {
            "name": "(gdb) 启动", // 配置名称，将会在启动配置的下拉菜单中显示
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/build/DataStructure",
            // "program": "${fileDirname}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc-9 生成活动文件" // 调试前执行的任务，一般为编译程序。与tasks.json的label相对应
        }
    ]
}